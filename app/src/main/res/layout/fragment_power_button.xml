<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/labelPowerButtonFragmentHeader" />

        <Switch
            android:id="@+id/buttonEnableService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonEnableService" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:focusable="true"
            android:text="@string/labelPowerButtonClickInterval" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonPowerButtonLowerSuccessBoundary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/buttonPowerButtonLowerSuccessBoundary" />

            <Button
                android:id="@+id/buttonPowerButtonUpperSuccessBoundary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/buttonPowerButtonUpperSuccessBoundary" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:focusable="true"
            android:text="@string/labelErrorVibration" />

        <Switch
            android:id="@+id/buttonErrorVibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buttonErrorVibration" />

    </LinearLayout>
</ScrollView>
